<div class="container my-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 justify-content-center">
      <a class="btn btn-primary mb-3" href="/">Back</a>
      <div class="card shadow">
        <div class="card-header">
          <h2>Update Product</h2>
        </div>
        <div class="card-body text-center">
          <form
            action="/update/<%= product.id %>"
            enctype="multipart/form-data"
            method="POST"
          >
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                name="title"
                placeholder="Product Title"
                value="<%= product.title %>"
              />
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                name="regularPrice"
                placeholder="Regular Price"
                value="<%= product.regularPrice %>"
              />
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                name="color"
                placeholder="Color"
                value="<%= product.color %>"
              />
            </div>
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                name="stock"
                placeholder="Stock"
                value="<%= product.stock %>"
              />
            </div>
            <div class="my-3">
              <img
                style="height: 150px; width: 150px"
                src="/product/<%= product.photo %>"
                alt=""
              />
            </div>
            <div class="mb-3">
              <input type="file" name="productPhoto" class="form-control" />
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-warning">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
