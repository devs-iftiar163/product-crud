<div class="container my-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 justify-content-center">
      <a class="btn btn-primary mb-3" href="/">Back</a>
      <div class="card shadow">
        <div class="card-body text-center">
          <div class="product-image">
            <img class="w-100" src="/product/<%= product.photo %>" alt="" />
            <h2><%= product.title %></h2>
            <h2>$<%= product.regularPrice %></h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
